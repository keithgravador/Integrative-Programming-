<!DOCTYPE html>
<html>
<head>
    <title>POST Method </title>
</head>
<body>
    <h2>PHP POST Method </h2>
    <form action="process.php" method="post">
        <label for="name">Enter your name:</label>
        <input type="text" name="name" id="name" required>
        <br><br>
        
        <label for="age">Enter your age:</label>
        <input type="number" name="age" id="age" required>
        <br><br>

        <label for="course">Enter your course:</label>
        <input type="text" name="course" id="name" required>
        <br><br>
        
        <input type="submit" value="Submit">
    </form>
</body>
</html>



<!DOCTYPE html>
<html>
<head>
    <title>Process POST</title>
</head>
<body>
    <?php
        if (isset($_POST['name']) && isset($_POST['age']) && isset($_POST['course'])) {
            $name = htmlspecialchars($_POST['name']);
            $age = htmlspecialchars($_POST['age']);
            $course = htmlspecialchars($_POST['course']); 

            echo "Your name is: " . $name . "<br>";
            echo "Your age is: " . $age . "<br>";
            echo "Your course is: " . $course . "<br>";
        } else {
            echo "No data received.";
        }
    ?>
</body>
</html>
