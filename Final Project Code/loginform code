<body>

<div class="login-container">
    <h2>Login</h2>

    <form id="loginForm" action="home.html">
        <input type="text" name="username" placeholder="Username" required>
        <input type="password" id="password" name="password" placeholder="Password" required>

        <div class="show-password">
            <input type="checkbox" id="showPass" onclick="togglePassword()">
            <label for="showPass">Show Password</label>
        </div>

        <div class="button-group">
            <button type="button" class="submit-btn" onclick="submitGet()">Login (GET)</button>
            <button type="button" class="submit-btn" onclick="submitPost()">Login (POST)</button>
        </div>
    </form>
</div>

<script>
function togglePassword() {
    var x = document.getElementById("password");
    x.type = x.type === "password" ? "text" : "password";
}

function submitGet() {
    const form = document.getElementById("loginForm");
    form.method = "GET";
    form.submit();
}

function submitPost() {
    const form = document.getElementById("loginForm");
    form.method = "POST";
    form.submit();
}
</script>

